<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/boarder_only_bottom_white"
    android:orientation="horizontal"
    android:theme="@style/TextColorThinTheme">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/problem_number"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:fontFamily="@font/noto_sans_kr_thin"
            android:text="Problem Number"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/problem_title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:fontFamily="@font/noto_sans_kr_thin"
            android:text="Problem Title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/problem_level"
            android:layout_width="50dp"
            android:fontFamily="@font/noto_sans_kr_thin"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Level"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/problem_tags"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_thin"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Tags..."
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slidingpage"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/webButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/button_eye_blue" />

        <ImageButton
            android:id="@+id/downloadButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/button_download_yellow_reverse" />
    </LinearLayout>

</FrameLayout>
